<xsd:schema
   xmlns:xsd="http://www.w3.org/2001/XMLSchema"
   xmlns="gta-gameworld-renderer"
   elementFormDefault="qualified"
   targetNamespace="gta-gameworld-renderer"
>
   <xsd:element name="GlobalConfig" type="GlobalConfigType"/>

   <xsd:complexType name="GlobalConfigType">
      <xsd:sequence>
         <xsd:element name="GtaFolder" type="xsd:string"/>
         <xsd:element name="LoadingParams" type="LoadingParamsType"/>
         <xsd:element name="RenderingParams" type="RenderingParamsType"/>
      </xsd:sequence>
   </xsd:complexType>

   <xsd:complexType name="LoadingParamsType">
      <xsd:sequence>
         <xsd:element name="ShowWarningsIfTextureNotFound" type="xsd:boolean"/>
      </xsd:sequence>
   </xsd:complexType>

   <xsd:complexType name="RenderingParamsType">
      <xsd:sequence>
         <xsd:element name="FullScreen" type="xsd:boolean"/>
         <xsd:element name="NearClippingDist" type="xsd:float"/>
         <xsd:element name="FarClippingDist" type="xsd:float"/>
      </xsd:sequence>
   </xsd:complexType>
   
</xsd:schema>