   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="schema.xsd"
>
   
   <GTAFolderPath>c:\Program Files\GTAIII\</GTAFolderPath>
   <!--<GTAFolderPath>c:\Program Files\GTA Vice City - Deluxe\</GTAFolderPath>-->
   <!--<GTAFolderPath>c:\Program Files\GTA San Andreas\</GTAFolderPath>-->
   
